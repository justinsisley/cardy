{
  "name": "cardy",
  "version": "0.3.0",
  "description": "A credit card utility belt for browser and Node.js apps",
  "main": "index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "chokidar 'src/*.js' 'test/*.js' -c 'npm run test'",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register",
    "build": "babel src --out-dir lib --presets=es2015",
    "prepare": "npm run build",
    "clean": "rm -rf node_modules package-lock.json && npm i"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justinsisley/cardy.git"
  },
  "author": "Justin Sisley",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.1",
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-config-mercenary": "^2.69.3",
    "mocha": "^3.5.0"
  },
  "dependencies": {
    "card-validator": "^4.1.0"
  }
}
